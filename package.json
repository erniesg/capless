{
  "name": "capless",
  "version": "1.0.0",
  "description": "AI-powered Parliamentary Content Pipeline - 5 Worker System",
  "private": true,
  "type": "module",
  "workspaces": [
    "workers/*"
  ],
  "scripts": {
    "test:integration": "vitest run tests/integration-vitest",
    "test:integration:watch": "vitest tests/integration-vitest",
    "test:integration:ui": "vitest --ui tests/integration-vitest",
    "test:unit": "npm run test --workspaces",
    "test:all": "npm run test:unit && npm run test:integration",
    "dev:ingestion": "npm run dev --workspace=workers/capless-ingest",
    "dev:video-matcher": "npm run dev --workspace=workers/video-matcher",
    "dev:moments": "npm run dev --workspace=workers/moments",
    "dev:asset-generator": "npm run dev --workspace=workers/asset-generator",
    "dev:video-compositor": "npm run dev --workspace=workers/video-compositor"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.9.14",
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.19.23",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "zod": "^4.1.12"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
